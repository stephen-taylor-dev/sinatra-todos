<section id="todos">
    <header>
        <h2>Editing "<%= @list[:name] %>"</h2>
        <ul>
            <form action="/lists/<%= @list_id %>/delete" method="post">
                <button class="delete" type="submit">Delete List</button>
            </form>
        </ul>
    </header>
</section>



<form action="/lists/<%= @list_id %>/" method="post">
    <dl>
        <dt>
            <label for="list_name">Enter a new name for the list:</label>
        </dt>
        <dd>
            <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name]%>">
        </dd>
    </dl>
    <fieldset class="actions">
        <input type="submit" value="Update">
        <a href="/lists/<%= @list_id %>">Cancel</a>
    </fieldset>
</form>
